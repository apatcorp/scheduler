<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXSpinner?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane fx:id="root" prefHeight="800.0" prefWidth="1280.0" style="-fx-background-size: cover;" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoadingScreenController">
   <children>
      <ImageView fitHeight="800.0" fitWidth="1280.0" pickOnBounds="true" StackPane.alignment="CENTER">
         <image>
            <Image url="@../images/loading_screen_bg.jpg" />
         </image>
         <viewport>
            <Rectangle2D />
         </viewport>
      </ImageView>
      <Text fx:id="infoText" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Daten werden geladen..." textAlignment="CENTER">
         <font>
            <Font name="Lucida Sans Unicode" size="45.0" />
         </font>
         <StackPane.margin>
            <Insets bottom="200.0" />
         </StackPane.margin>
      </Text>
      <JFXSpinner fx:id="progress" radius="50.0" startingAngle="0.0">
         <StackPane.margin>
            <Insets top="100.0" />
         </StackPane.margin>
      </JFXSpinner>
   </children>
</StackPane>
