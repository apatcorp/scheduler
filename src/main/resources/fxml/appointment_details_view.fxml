<?xml version="1.0" encoding="UTF-8"?>

<?import com.calendarfx.view.TimeField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AppointmentDetailsController">
   <children>
      <HBox prefHeight="35.0">
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <children>
            <VBox alignment="CENTER_LEFT" prefWidth="75.0">
               <children>
                  <Label maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" text="Titel:" textFill="#727272" wrapText="true" VBox.vgrow="ALWAYS">
                     <font>
                        <Font name="Lucida Sans Unicode" size="14.0" />
                     </font></Label>
               </children>
            </VBox>
            <VBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="10.0" HBox.hgrow="ALWAYS">
               <children>
                  <TextField fx:id="titleField" promptText="Titel..." style="-fx-background-radius: 0;">
                     <font>
                        <Font name="Lucida Sans Unicode" size="12.0" />
                     </font>
                  </TextField>
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="35.0" VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <children>
            <VBox alignment="CENTER_LEFT">
               <children>
                  <Label prefWidth="75.0" text="Datum:" textFill="#727272">
                     <font>
                        <Font name="Lucida Sans Unicode" size="14.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <VBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
               <children>
                  <DatePicker fx:id="dateField" showWeekNumbers="true" style="-fx-background-radius: 0;" />
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="35.0">
         <children>
            <VBox alignment="CENTER_LEFT">
               <children>
                  <Label prefWidth="75.0" text="Uhrzeit:" textFill="#727272">
                     <font>
                        <Font name="Lucida Sans Unicode" size="14.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <VBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="10.0">
               <children>
                  <TimeField fx:id="timeField" style="-fx-background-radius: 0;">
                     <effect>
                        <Blend />
                     </effect>
                  </TimeField>
               </children>
            </VBox>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="35.0" VBox.vgrow="ALWAYS">
         <children>
            <VBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
               <children>
                  <Button fx:id="addButton" alignment="CENTER" contentDisplay="CENTER" graphicTextGap="5.0" maxWidth="-Infinity" minWidth="-Infinity" mnemonicParsing="false" style="-fx-background-color: #17A2B8;" text="Neuer Stichpunkt" textAlignment="CENTER" textFill="WHITE">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <font>
                        <Font name="Lucida Sans Unicode" size="14.0" />
                     </font></Button>
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </VBox>
         </children>
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </HBox>
      <HBox VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
         <children>
            <ListView fx:id="detailList" editable="true" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="200.0" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
   </children>
</VBox>
